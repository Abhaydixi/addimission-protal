<%- include('../header.ejs') %>
    <br><br><br><br><br>
    <h1 class="text-center ">Display</h1>
    <div class="container mt-5">
        <div class="table-responsive">

            <table class="table table-bordered  mt-5">
                <thead class="text-center bg-dark text-white">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>

                        <th>Mobile Number</th>
                        <th>Course</th>
                        <th>Status</th>
                        <th>Comment</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% d.forEach((item)=>{ %>
                        <tr>
                            <td>
                                <%= item._id %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item. mobile_number %>
                            </td>
                            <td>
                                <%= item.course %>
                            </td>
                            <td>
                                <%= item.status %>
                            </td>
                            <td>
                                comment
                            </td>
                            <td>
                                <a href="/course_view/<%= item._id %>" class="btn btn-info">View</a>
                                <a href="/course_edit/<%= item._id %>" class="btn btn-primary">Edit</a><br>
                                <!-- <a href="/course_delete/<%= item._id %>" class="btn btn-danger mt-3">Delete</a> -->
                            </td>
                        </tr>

                        <% }) %>


                </tbody>
            </table>
        </div>
    </div>
    <br><br><br><br><br><br><br><br>

    <%- include('../footer.ejs')%>