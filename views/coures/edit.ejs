<%- include('../header.ejs')%>
    <br><br><br><br>

    <div class="container">
        <form action="/course_update/<%= d._id %>" method="post">
            <div class="mb-3">
                <label>Name:</label>
                <input type="text" name="name" class="form-control" value="<%= d.name %>">
            </div>
            <div class="mb-3">
                <label>Email:</label>
                <input type="email" name="email" class="form-control" value="<%= d.email %>">
            </div>
            <div class="mb-3">
                <label>Mobile Number:</label>
                <input type="text" name="mobile_number" class="form-control" value="<%= d.mobile_number %>">
            </div>
            <div class="mb-3">
                <label>Address:</label>
                <textarea cols="15" rows="3" class="form-control"><%= d.address %></textarea>
            </div>
            <div class="mb-3">
                <label>Gender:</label>
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios1" value="male"
                    <%=d.gender=='male' ?'checked':'' %>>
                <label class="form-check-label" for="exampleRadios1"> Male</label>
                <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="female"
                    <%=d.gender=='female' ?'checked':'' %>>
                <label class="form-check-label" for="exampleRadios1"> Female</label>
            </div>
            <div class="mb-3">
                <label>Qualification:</label>
                <select class="form-control" name="qualification">
                    <option>Please Select</option>
                    <option <%=d.qualification=='12Th' ?'selected':'' %>>12Th</option>
                    <option <%=d.qualification=='B.Sc' ?'selected':'' %>>B.Sc</option>
                </select>
            </div>
            <div class="mb-3">
                <label>Course:</label>
                <input type="text" value="btech" name="course" class="form-control" readonly>
            </div><br>
            <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>


    </div>
    <br>


    <%- include('../footer.ejs')%>